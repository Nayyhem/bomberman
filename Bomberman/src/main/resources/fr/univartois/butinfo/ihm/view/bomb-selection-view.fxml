<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.ihm.controller.BombSelectionController">
    <left>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Sélectionnez une bombe :" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <ListView fx:id="bombListView" prefHeight="300.0" prefWidth="200.0" />
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;" alignment="CENTER">
            <Label text="Détails de la bombe :" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <ImageView fx:id="bombImageView" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" />
            <Label fx:id="bombNameLabel" text="Nom de la bombe" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <Label fx:id="bombDescriptionLabel" text="Description de la bombe" wrapText="true" maxWidth="300.0" />
            <Label fx:id="bombDelayLabel" text="Délai: X secondes" style="-fx-font-size: 12px;" />
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;" alignment="CENTER">
            <Button fx:id="validateButton" text="Valider" onAction="#handleValidate" />
            <Button fx:id="cancelButton" text="Annuler" onAction="#handleCancel" />
        </HBox>
    </bottom>
</BorderPane>